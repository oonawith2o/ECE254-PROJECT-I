<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DOIT" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.DOIT" parent="Base.Theme.DOIT">
        <item name="windowActionBar">false</item>
        <item name="tint">@color/beige</item>
    </style>

    <style name="Theme.DOIT.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/beige</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_todo_list_icon</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.DOIT</item>
    </style>

</resources>